<?xml version="1.0" ?> 
<project name="TopSpot" default="war">

	<path id="compile.classpath">
		<fileset dir="war/WEB-INF/lib">
			<include name="*.jar"/>
		</fileset>
	</path>
	
	<target name="init">
		<mkdir dir="war/WEB-INF/classes"/>
		<mkdir dir="dist" />
	</target>
	
	<target name="compile" depends="init" >
		<javac destdir="war/WEB-INF/classes" debug="true" srcdir="src">
			<classpath refid="compile.classpath"/>
		</javac>
	</target>
	
	<target name="war" depends="compile">
		<war destfile="dist/TopSpot.war" webxml="war/WEB-INF/web.xml">
			<fileset dir="war"/>
			<lib dir="war/WEB-INF/lib"/>
			<classes dir="war/WEB-INF/classes"/>
		</war>
	</target>
	
	<target name="clean">
		<delete dir="dist" />
		<delete dir="build" />
	</target>
	
</project>